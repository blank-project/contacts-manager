<form action="/contacts/" method="POST" class="pure-form pure-form-aligned">
  {{#with contact }}
  {{#if id }}
  <input type="hidden" name="id" value="{{ id }}" />
  {{/if}}
  <fieldset>
    <div class="pure-control-group">
      <label for="name">Nom</label>
      <input id="name" type="text" name="name" value="{{ fullName }}"/><br />
    </div>
    <div class="pure-control-group">
      <label for="email">Mail</label>
      <input id="email" type="email" name="email" value="{{ email }}" /><br />
    </div>
    <div class="pure-control-group">
      <label for="phone">Téléphone</label>
      <input id="phone" type="tel" name="phone" value="{{ phone }}" /><br />
    </div> <div class="pure-control-group">
      <label for="organization">Organisation</label>
      <input id="organization" type="text" name="organization" value="{{ organization }}" /><br />
    </div> <div class="pure-control-group">
      <label for="title">Fonction</label>
      <input id="title" type="text" name="title" value="{{ title }}" /><br />
    </div>
  </fieldset>
  <fieldset>
    <legend>Adresse</legend>
    <div class="pure-control-group">
      <label for="address.number">N°</label>
      <input id="address.number" type="text" name="address.number" value="{{ address.number }}" /><br />
    </div>
    <div class="pure-control-group">
      <label for="address.street">Rue</label>
      <input id="address.street" type="text" name="address.street" value="{{ address.street }}" /><br />
    </div>
    <div class="pure-control-group">
      <label for="address.code">Code Postal</label>
      <input id="address.code" type="text" name="address.code" value="{{ address.code }}" /><br />
    </div>
    <div class="pure-control-group">
      <label for="address.city">Ville</label>
      <input id="address.city" type="text" name="address.city" value="{{ address.city }}" /><br />
    </div>
  </fieldset>

  <div class="pure-control-group">
    <label for="note">Note</label>
    <textarea id="note" name="note">{{ note }}</textarea><br />
  </div>
  <fieldset class="padded">
    <input type="submit" name="submit" value="Soumettre" class="pure-button pure-button-primary"/>
    {{#if id }}
    <a href="/contacts/{{ id }}" class="pure-button">Annuler</a>
    {{else}}
    <a href="/contacts/" class="pure-button">Annuler</a>
    {{/if}}
  </fieldset>
  {{/with}}
</form>
