<span class="fa fa-user"></span>
{{#if message }}<div class="messages error">{{message}}</div>{{/if}}
<form action="/users/" method="POST" class="pure-form">
    <div>
        <label>E-mail:</label>
        <input id="email" name="email" type="email"  placeholder="Email" required />
    </div>
    <div>
        <label>Username:</label>
        <input id="username" name="username" type="text"  placeholder="Login" required />
    </div>
    <div>
        <label>Password:</label>
        <input id="password" name="password" type="password" placeholder="Password" required />
    </div>
    <div>
      <input id="submit" name="submit" type="submit" value="Soumettre" class="pure-button pure-button-primary"/>
    </div>
</form>
